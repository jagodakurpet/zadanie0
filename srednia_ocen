#include <iostream>
using namespace std;
float oceny[7]; float suma=0, srednia;
int main()
{
    for(int i=0; i<7; i++)
    {
        cout<< endl<< "PODAJ "<<i+1<<" OCENE : ";
        cin >>oceny[i];
        suma = suma + oceny[i];
    }
    srednia = suma / 7;
    cout <<endl<<"srednia= "<<srednia;
    for(int i=0; i<7; i++)
    {
        cout << "Ocena"<<i+1<<" : "<<oceny[i]<<endl;
    }
    return 0;
}
